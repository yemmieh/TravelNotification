    <td style="text-align:center;color:red">
        @Html.HiddenFor(m => Model.IsDeleted)

        <a class="delete-country" style="text-align:center;color:red">
            <span class="glyphicon glyphicon-trash" style="text-align:center;color:red"></span>
        </a>
    </td>
</tr>
