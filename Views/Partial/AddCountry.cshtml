    function showdatebox(v) {

        v = v || $(".datebox");

        var MAXDATE = "48M +0D";
        var MINDATE = "-0M +0D";
        v.not(" .from , .to ").datepicker({
            dateFormat: DATEFT,
            //beforeShowDay: noWeekendsOrHolidays,
            maxDate: MAXDATE,
            minDate: MINDATE,
            showOtherMonths: true,
            selectOtherMonths: true,
            changeMonth: true,
            yearRange: "-200+0",
            changeYear: true
        });

        if ($(".from").length > 0) {

            var MAXDATE = "48M +0D";
            var MINDATE = "-0M +0D";
            var DATEFT = "dd/mm/yy";

            $(".from").datepicker({
                dateFormat: DATEFT,
                maxDate: MAXDATE,
                minDate: MINDATE,
                changeMonth: true,
                changeYear: true,
                /*onClose: function( selectedDate ) {
                    $("#"+$(this).attr("id")+"_1").datepicker( "option", "minDate", selectedDate );
                },*/
                onSelect: function (selectedDate) {
                    $("#" + $(this).attr("id") + "_1").datepicker("option", "minDate", selectedDate);
                }
            });

            $(".to").datepicker({
                dateFormat: DATEFT,
                maxDate: MAXDATE,
                minDate: MINDATE,
                changeMonth: true,
                changeYear: true,
                /*onClose: function( selectedDate ) {
                    $("#"+$(this).attr("id").replace("_1","")).datepicker( "option", "maxDate", selectedDate );
                },*/
                onSelect: function (selectedDate) {
                    $("#" + $(this).attr("id").replace("_1", "")).datepicker("option", "maxDate", selectedDate);
                }
            });
        }
    }
